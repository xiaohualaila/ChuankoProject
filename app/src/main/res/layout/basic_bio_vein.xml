<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wedonetech.biovein.BioVeinActivity$PlaceholderFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/biovein_layout_full"
        android:orientation="vertical">
        <LinearLayout
            style="@style/biovein_layout_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_enum_device"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="1.枚举设备"
                android:onClick="OnClickBtnEnumDevice"/>

            <Button
                android:id="@+id/btn_init_device"
                android:layout_toRightOf="@id/btn_enum_device"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="2.初始化设备"
                android:onClick="OnClickBtnInitDevice"/>

            <Button
                android:id="@+id/btn_open_device"
                android:layout_toRightOf="@id/btn_init_device"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="3.打开设备"
                android:onClick="OnClickBtnOpenDevice"/>
        </LinearLayout>
        <LinearLayout
            style="@style/biovein_layout_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_get_dev_serialnum"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="4.读序列号"
                android:onClick="OnClickBtnGetDevSerialNum"/>

            <Button
                android:id="@+id/btn_get_sdkversion"
                android:layout_toRightOf="@id/btn_get_dev_serialnum"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="5.读SDK版本"
                android:onClick="OnClickBtnGetSdkVersion"/>

            <Button
                android:id="@+id/btn_finger_detect"
                android:layout_toRightOf="@id/btn_get_sdkversion"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="6.检测手指"
                android:onClick="OnClickBtnFingerDetect"/>
        </LinearLayout>
        <LinearLayout
            style="@style/biovein_layout_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_grab_feature"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="7.读静脉特征"
                android:onClick="OnClickBtnGrabFeature"/>

            <Button
                android:id="@+id/btn_grab_feature_image"
                android:layout_toRightOf="@id/btn_grab_feature"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="8.读静脉特征和图片"
                android:onClick="OnClickBtnGrabFeatureImage"/>
        </LinearLayout>
        <LinearLayout
            style="@style/biovein_layout_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_close_device"
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"
                android:text="9.关闭设备"
                android:onClick="OnClickBtnCloseDevice"/>
            <View
                style="@style/biovein_layout_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            style="@style/biovein_layout_vertical"
            android:layout_weight="6"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
